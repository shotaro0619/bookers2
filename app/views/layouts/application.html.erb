<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/*******.js" crossorigin="anonymous"></script>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark text-white pt-2 pb-2">
     <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand p-3 justify-content-start" href="/"><%= link_to "Bookers", root_path, class:"text-light" %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">

          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>

              <li class="nav-item">
               <%= link_to user_path(current_user.id), class:"text-light" do %>
                <i class="fas fa-home">Home</i>
               <% end %>
              </li>

              <li class="nav-item">
                <%= link_to users_path, class:"text-light" do %>
                 <i class="fas fa-users">Users</i>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to books_path, class:"text-light" do %>
                 <i class="fas fa-book-open">Books</i>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to destroy_user_session_path, class:"text-light", method: :delete  do %>
                 <i class="fas fa-sign-out-alt">logout</i>
                <% end %>
              </li>
            <% else %>

              <li class="nav-item">
                <%= link_to root_path, class:"text-light" do %>
                 <i class="fas fa-home">Home</i>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to "/home/about", class:"text-light" do %>
                 <i class="fas fa-link">About</i>
                <% end %>
              </li>

              <li class="nav-item">
                <%= link_to new_user_registration_path, class:"text-light" do %>
                 <i class="fas fa-user-plus">sign up</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class:"text-light" do %>
                 <i class="fas fa-sign-out-alt">log in</i>
                <% end %>
              </li>
            <% end %>
         </ul>
       </div>
      </nav>
     </header>


    <div class="flash-success"><%= flash[:notice] %></div>
    <%= yield %>

    <footer>
       <div class="container mt-5">
         <div class="row">
           <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
           </div>
         </div>
       </div>

     </footer>

  </body>
</html>
