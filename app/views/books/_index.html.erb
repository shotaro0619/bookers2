<table class="table table-hover table-inverse">
  <thead class="thead-light">
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
<% books.each do |book| %>
<tr>
  <td>
    <%= link_to user_path(book.user) do %>
     <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
    <% end %>
  </td>
  <td><%= link_to book.title, book %></td>
  <td class="text-break"><%= book.body %></td>
  <td>
      <% if book.category != nil %>
       <%= link_to book.category, search_path(value: book.category, model: 'book') %>
      <% end %>
  </td>
  <td id="book_<%= book.id %>">
   <%= render 'favorites/favorite-btn', book: book %>
  </td>
  <td >コメント数：<%= book.book_comments.count %></td>
  <td>閲覧数：<%= book.impressions_count %></td>
</tr>
<% end %>

</tbody>
</table>