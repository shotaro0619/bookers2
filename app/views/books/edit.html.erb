<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%if @book.errors.any? %>
         <div class="error_explanation">
            <h3><%= @book.errors.count %>&nbsp;error prohibited this obj from being saved: </h3>
              <ul class="error-list">
               <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
               <% end %>
              </ul>
          </div>
        <% end %>
      <%= form_with model:@book, local:true do |f| %>
       <div class="form-group">
        <label for="inputName">Title</label>
        <%= f.text_field :title, autofocus: true, id:"inputName", class:"form-control name"%>
       </div>

        <div class="form-group">
          <label for="inputIntroduction">Opinion</label>
          <%= f.text_area :body, autofocus: true, id:"inputIntroduction", class:"form-control introduction"%>
        </div>
        <div class="form-group">
        <%= f.submit "Update Book", class:"btn btn-success"%>
        </div>
      <% end %>
      <div><%= link_to "Show", book_path(@book) %>
           |
           <%= link_to "Back", "/books" %>
      </div>
   </div>
  </div>
 </div>
</main>