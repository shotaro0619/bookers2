<h2>New book</h2>
    <%= form_with model: book_new, local:true do |f| %>
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    <label>Opinion</label><br>
    <%= f.text_area :body %><br>
    <label>Category</label><br>
    <%= f.text_field :category %>
    <%= f.submit 'Create Book', class:"btn btn-success mt-3" %>
<% end %>